<div class="nav-itens text-center">
  <div class="row events">
    <% if tickets && tickets.any? %>
        <% tickets.each do |ticket| %>
          <%#= link_to ticket_path(ticket) do%>
          <a href="#buyTicketModal" data-toggle="modal" data-target="#buyTicketModal">
            <div class="col-sm-4 one-ticket">
              <img src="Evento<%=(1..4).to_a.sample%>.png" class="img-responsive" style="width:100%" alt="Image">
              <strong>
                <p><%= ticket.name %></p>
                <p><%= ticket.date.strftime("%d/%m/%Y") %></p>
                <p>R$ <%= ticket.price + ticket.taxe %></p>
              </strong>
            </div>
          </a>
          <%# end %>
          <% @ticket = ticket%>
          <div id="buyTicketModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Mais informações</h4>
                </div>
                <div class="modal-body">
                  <%= render "tickets/show"%>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    <% else %>
      <div class="empty">
        <p> Não há eventos disponíveis, ainda </p>
        <%= button_to("Novo Evento", new_ticket_path, method: :get, :class => "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div><br>

<%= form_for(ticket, :html => {:class => ''}) do |f| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label "Nome do evento", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: "Nome do evento" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Valor  ", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control price-field', placeholder: "00,00" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Data do evento", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :date, class: 'form-control', placeholder: "Nome do evento" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label "Taxa", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.number_field_tag :taxe, class: 'form-control price-field', placeholder: "00,00" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
